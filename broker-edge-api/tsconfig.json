{
  "compilerOptions": {
    "target": "es2017",         // Upgrade target so async/await works well
    "module": "commonjs",       // Keep commonjs for Node.js compatibility
    "noImplicitAny": true,
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}
